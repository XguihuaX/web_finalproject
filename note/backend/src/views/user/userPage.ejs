<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/public/css/userPage.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- 侧边栏切换按钮 -->
    <button id="sidebar-toggle"><span class="arrow">❯</span></button>

    <!-- 侧边栏 -->
    <div class="sidebar">
        <!-- 天气查询功能 -->
        <div class="sidebar-section">
            <h3>天气查询</h3>
            <input type="text" id="city-input" placeholder="请输入城市名称..." />
            <button id="city-button">查询</button>
        </div>

        <!-- 笔记管理功能 -->
        <div class="sidebar-section">
            <h3>笔记管理</h3>
            <button id="open-note-modal">添加笔记</button>
            <input type="text" id="delete-note-id" placeholder="输入笔记ID以删除" />
            <button id="delete-note-button">删除笔记</button>
        </div>

        <!-- 图片管理功能 -->
        <div class="sidebar-section">
            <h3>图片管理</h3>
            <button id="open-add-image-modal">添加图片</button>
            <input type="text" id="image-id-input" placeholder="输入图片ID以删除" />
            <button id="delete-image-button">删除图片</button>
        </div>

        <!-- 背景选择功能 -->
        <div class="sidebar-section">
            <h3>背景选择</h3>
            <select id="background-select">
                <option value="paper">纸张</option>
                <option value="custom1">自定义背景1</option>
                <option value="custom2">自定义背景2</option>
            </select>
        </div>
    </div>

    <!-- 主内容区域 -->
    <div class="main-content">
        <div id="time">加载时间...</div>
        <div id="weather">加载天气...</div>
        <div id="llm-section">
            <input type="text" id="llm-input" placeholder="向我提问..." />
            <button id="llm-button">发送</button>
            <div id="llm-response">你的回答将显示在这里...</div>
        </div>
    </div>

    <!-- 添加笔记模态框 -->
    <div id="note-modal" class="modal hidden">
        <div class="modal-content">
            <span id="close-note-modal" class="close-button">×</span>
            <h3>添加笔记</h3>
            <textarea id="note-text" placeholder="在此输入你的笔记..."></textarea>
            <button id="save-note-button">保存</button>
        </div>
    </div>

    <!-- 添加图片模态框 -->
    <div id="add-image-modal" class="modal hidden">
        <div class="modal-content">
            <span id="close-add-image-modal" class="close-button">×</span>
            <h3>添加图片</h3>
            <div id="image-drop-zone" class="drop-zone">
                拖动图片到此处或点击选择文件
                <input type="file" id="image-upload" hidden />
            </div>
            <button id="upload-image-button">上传</button>
        </div>
    </div>

    <script src="/public/js/userPage.js"></script>
</body>
</html>
