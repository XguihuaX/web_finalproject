<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/public/css/userPage.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- 侧边栏切换按钮 -->
    <button id="sidebar-toggle"><span class="arrow">❯</span></button>

    <!-- 侧边栏 -->
    <div class="sidebar">
        <!-- 天气查询功能 -->
        <div class="sidebar-section">
            <h3>weather</h3>
            <input type="text" id="city-input" placeholder="input city name" />
            <button id="city-button">search</button>
        </div>

        <!-- 笔记管理功能 -->
        <div class="sidebar-section">
            <h3>note management</h3>
            <button id="open-note-modal">add note</button>
            <input type="text" id="delete-note-id" placeholder="input note ID to delete" />
            <button id="delete-note-button">delete note</button>
        </div>

        <!-- 图片管理功能 -->
        <div class="sidebar-section">
            <h3>image management</h3>
            <button id="open-add-image-modal">add image</button>
            <input type="text" id="image-id-input" placeholder="input image ID to delete />
            <button id="delete-image-button">delete image</button>
        </div>

        <!-- 背景选择功能 -->
        <div class="sidebar-section">
            <h3>background</h3>
            <select id="background-select">
                <option value="paper">1</option>
                <option value="custom1">2</option>
                <option value="custom2">3</option>
            </select>
        </div>
	<div class="sidebar-section">
		<button id="logout-button" class="logout-btn">Logout</button>
	</div>
    </div>

    <!-- 主内容区域 -->
    <div class="main-content">
        <div id="time">loading time ...</div>
        <div id="weather">loading current weather...</div>
        <div id="llm-section">
            <input type="text" id="llm-input" placeholder="ask me ..." />
            <button id="llm-button">sned</button>
            <div id="llm-response">your reply will be shown in here...</div>
        </div>
    </div>

    <!-- 添加笔记模态框 -->
    <div id="note-modal" class="modal hidden">
        <div class="modal-content">
            <span id="close-note-modal" class="close-button">×</span>
            <h3>add note</h3>
            <textarea id="note-text" placeholder="input the text..."></textarea>
            <button id="save-note-button">save</button>
        </div>
    </div>

    <!-- 添加图片模态框 -->
    <div id="add-image-modal" class="modal hidden">
        <div class="modal-content">
            <span id="close-add-image-modal" class="close-button">×</span>
            <h3>add image</h3>
            <div id="image-drop-zone" class="drop-zone">
                Drag an image here or click to select a file
                <input type="file" id="image-upload" hidden />
            </div>
            <button id="upload-image-button">上传</button>
        </div>
    </div>

    <script src="/public/js/userPage.js"></script>
</body>
</html>
