<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/public/css/adminPage.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- 侧边栏切换按钮 -->
    <button id="sidebar-toggle">
        <span class="arrow">❯</span>
    </button>

    <!-- 侧边栏 -->
    <div class="sidebar">
        <!-- 用户管理 -->
        <div class="sidebar-section">
            <h3>User Management</h3>
            <button id="view-users">View All Users</button>
            <input type="text" id="user-id-input" placeholder="Enter User ID">
            <button id="view-user">View User</button>
            <button id="delete-user">Delete User</button>
        </div>

        <!-- 笔记管理 -->
        <div class="sidebar-section">
            <h3>Note Management</h3>
            <button id="view-notes">View All Notes</button>
            <input type="text" id="note-id-input" placeholder="Enter Note ID">
            <button id="view-note">View Note</button>
            <button id="delete-note">Delete Note</button>
        </div>

        <!-- 图片管理 -->
        <div class="sidebar-section">
            <h3>Image Management</h3>
            <button id="view-images">View All Images</button>
            <input type="text" id="image-id-input" placeholder="Enter Image ID">
            <button id="view-image">View Image</button>
            <button id="delete-image">Delete Image</button>
        </div>

        <!-- 背景切换 -->
        <div class="sidebar-section">
            <h3>Background</h3>
            <select id="background-select">
                <option value="paper">Paper</option>
                <option value="custom1">Custom 1</option>
            </select>
        </div>
    	<div class="sidebar-section">
		    <button id="logout-button" class="logout-btn">Logout</button>
	    </div>
    </div>

    <!-- 主要内容区域 -->
    <div class="main-content">
        <div id="time">Loading time...</div>
        <div id="weather">Loading weather...</div>
        <div id="admin-output">Admin actions will be shown here...</div>
    </div>

    <script src="/public/js/adminPage.js"></script>
</body>
</html>
